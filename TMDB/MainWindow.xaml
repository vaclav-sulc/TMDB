<Window x:Class="TMDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Action"  Content="Click" FontSize="22" HorizontalAlignment="Left" Margin="311,30,0,0" VerticalAlignment="Top" Height="36" Width="190" Click="Action_Click"/>
        <ListBox x:Name="MovieList" Margin="107,88,84,28" d:ItemsSource="{d:SampleData ItemCount=30}" />

    </Grid>
</Window>
